# =============================================================================
# Botari API Environment Variables
# =============================================================================

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# JWT
JWT_SECRET=your-jwt-secret-key

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Vonage Voice Configuration
# =============================================================================

# Vonage API Credentials (Required)
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret

# Vonage Application Credentials (Required for webhooks)
VONAGE_APPLICATION_ID=your-vonage-application-id
VONAGE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# Vonage Phone Number (Required - the number to use for outbound calls)
VONAGE_PHONE_NUMBER=+1234567890

# =============================================================================
# Webhook Configuration
# =============================================================================

# Base URL for webhooks (must be publicly accessible)
# This is the URL Vonage will call for voice webhooks
WEBHOOK_BASE_URL=https://api.botari.ai

# Alternative: API_BASE_URL (used if WEBHOOK_BASE_URL is not set)
API_BASE_URL=https://api.botari.ai

# =============================================================================
# External Services (Optional)
# =============================================================================

# External webhook for call events
EXTERNAL_WEBHOOK_URL=

# =============================================================================
# Server Configuration
# =============================================================================

PORT=4000
NODE_ENV=development

# =============================================================================
# Frontend URLs (for CORS)
# =============================================================================

FRONTEND_URL=https://botari-frontend.vercel.app
